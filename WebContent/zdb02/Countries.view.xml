<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
		controllerName="zdb02.Countries" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Title">
		<content>
	           <ComboBox>
	              <items>
	                 <core:Item text="India"/>
	                 <core:Item text="USA"/>
	                 <core:Item text="Finland"/>
	              </items>
	           </ComboBox>
	           
	            <ComboBox>
	              <items>
	                 <core:Item text="{/country/0/name}"/>
	                 <core:Item text="{/country/1/name}"/>
	                 <core:Item text="{/country/2/name}"/>
	              </items>
	           </ComboBox>
	           
	            <ComboBox binding="{/country}">
	              <items>
	                 <core:Item text="{0/name}"/>
	                 <core:Item text="{1/name}"/>
	                 <core:Item text="{2/name}"/>
	              </items>
	           </ComboBox>
	           
	           <ComboBox items="{/country}">
	              <items>
	                 <core:Item text="{name}"/>  
	              </items>
	           </ComboBox>
	           
	             <ComboBox id="idCombo">
	              
	           </ComboBox>
	           
	           
		</content>
	</Page>
</core:View>